BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: mile_input
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    #Button:
    #    text: 'Convert miles to km'
    #    on_press: app.handle_convert()
    Label:
        id: output_label
        text: app.km_output
        color: (1, 1, 0, 1)